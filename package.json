{
  "name": "epir",
  "version": "0.0.6",
  "description": "EllipticPIR client library (Node.js / TypeScript bindings).",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prepack": "npm run clean && npm run build && npm run em:build",
    "preinstall": "npm run c:build",
    "install": "node-gyp rebuild",
    "postinstall": "",
    "build": "tsc",
    "clean": "rm -rf build_c build_em dist",
    "c:build": "mkdir -p build_c && cd build_c && cmake ../ -DCMAKE_BUILD_TYPE=Release -DBUILD_TESTING=OFF && make -j$(cat /proc/cpuinfo | grep processor | wc -l)",
    "gyp:rebuild": "node-gyp rebuild",
    "em:build": "mkdir -p build_em && cd build_em && emcmake cmake -DCMAKE_INSTALL_PREFIX=../dist .. && emmake make all install",
    "browser:build": "webpack",
    "serve": "webpack-cli serve --mode development",
    "epir_genm": "LD_LIBRARY_PATH=./build_c/epir/lib ./build_c/epir/bin/epir_genm",
    "test": "npm run epir_genm && jest --verbose"
  },
  "bin": {
    "epir_genm": "build_c/epir/bin/epir_genm"
  },
  "files": [
    "src_c/*",
    "src_ts/*",
    "dist/*",
    "CMakeLists.txt",
    "binding.gyp"
  ],
  "keywords": [
    "cryptography",
    "PIR",
    "private information retrieval",
    "ElGamal",
    "EC-ElGamal",
    "elliptic curve",
    "Crypto Incognito"
  ],
  "author": "Masahiko Hyuga <mail@mhyuga.jp>",
  "homepage": "https://crypto-incognito.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/EllipticPIR/EllipticPIR.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.37",
    "dexie": "^3.0.3",
    "node-gyp": "^8.0.0",
    "process": "^0.11.10",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.1.2",
    "typescript": "^4.2.4",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2",
    "worker-loader": "^3.0.8",
    "workerloader-jest-transformer": "visvirial/workerloader-jest-transformer#patch-1"
  },
  "dependencies": {
    "jest": "^26.6.3",
    "node-addon-api": "^3.1.0"
  }
}

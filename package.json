{
  "name": "epir",
  "version": "0.0.1",
  "description": "EllipticPIR client library (Node.js / TypeScript bindings).",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prepack": "npm run build",
    "preinstall": "",
    "install": "node-gyp rebuild",
    "postinstall": "epir_genm",
    "build": "tsc",
    "clean": "rm -rf build",
    "cpp:build": "mkdir -p build && cd build && cmake ../ -DCMAKE_BUILD_TYPE=Release && make",
    "gyp:rebuild": "node-gyp rebuild",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bin": {
    "epir_genm": "build/src/epir_genm"
  },
  "files": [
    "src/*",
    "dist/*",
    "CMakeLists.txt",
    "binding.gyp"
  ],
  "keywords": [
    "cryptography",
    "PIR",
    "private information retrieval",
    "ElGamal",
    "EC-ElGamal",
    "elliptic curve",
    "Crypto Incognito"
  ],
  "author": "Masahiko Hyuga <mail@mhyuga.jp>",
  "homepage": "https://crypto-incognito.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/EllipticPIR/EllipticPIR.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.37",
    "node-gyp": "^8.0.0"
  },
  "dependencies": {
    "node-addon-api": "^3.1.0"
  }
}

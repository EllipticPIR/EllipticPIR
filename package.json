{
  "name": "epir",
  "version": "0.0.5",
  "description": "EllipticPIR client library (Node.js / TypeScript bindings).",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prepack": "npm run build",
    "preinstall": "",
    "install": "node-gyp rebuild",
    "postinstall": "npm run cpp:build && epir_genm",
    "build": "tsc",
    "clean": "rm -rf build",
    "cpp:build": "mkdir -p build && cd build && cmake ../ -DCMAKE_BUILD_TYPE=Release -DBUILD_TESTING=OFF && make",
    "gyp:rebuild": "node-gyp rebuild",
    "em:cmake": "mkdir -p build_em && cd build_em && emcmake cmake ..",
    "em:make": "cd build_em && make",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bin": {
    "epir_genm": "build/src/epir_genm"
  },
  "files": [
    "src/*",
    "dist/*",
    "CMakeLists.txt",
    "binding.gyp"
  ],
  "keywords": [
    "cryptography",
    "PIR",
    "private information retrieval",
    "ElGamal",
    "EC-ElGamal",
    "elliptic curve",
    "Crypto Incognito"
  ],
  "author": "Masahiko Hyuga <mail@mhyuga.jp>",
  "homepage": "https://crypto-incognito.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/EllipticPIR/EllipticPIR.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.37",
    "node-gyp": "^8.0.0",
    "ts-loader": "^9.1.2",
    "typescript": "^4.2.4",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "node-addon-api": "^3.1.0"
  }
}

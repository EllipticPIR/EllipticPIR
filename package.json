{
  "name": "epir",
  "version": "0.0.6",
  "description": "EllipticPIR client library (Node.js / TypeScript bindings).",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prepack": "npm run clean && npm run build && npm run em:build",
    "preinstall": "",
    "install": "node-gyp rebuild",
    "postinstall": "npm run cpp:build && epir_genm",
    "build": "tsc",
    "clean": "rm -rf build build_em dist",
    "cpp:build": "mkdir -p build && cd build && cmake ../ -DCMAKE_BUILD_TYPE=Release -DBUILD_TESTING=OFF && make",
    "gyp:rebuild": "node-gyp rebuild",
    "em:build": "mkdir -p build_em && cd build_em && dotenv -e ../.env -- emcmake cmake -DCMAKE_INSTALL_PREFIX=../dist .. && make all install",
    "browser:build": "webpack",
    "serve": "webpack-cli serve --mode development",
    "test": "jest"
  },
  "bin": {
    "epir_genm": "build/src/epir_genm"
  },
  "files": [
    "src/*",
    "dist/*",
    "CMakeLists.txt",
    "binding.gyp"
  ],
  "keywords": [
    "cryptography",
    "PIR",
    "private information retrieval",
    "ElGamal",
    "EC-ElGamal",
    "elliptic curve",
    "Crypto Incognito"
  ],
  "author": "Masahiko Hyuga <mail@mhyuga.jp>",
  "homepage": "https://crypto-incognito.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/EllipticPIR/EllipticPIR.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.37",
    "dexie": "^3.0.3",
    "dotenv-cli": "^4.0.0",
    "node-gyp": "^8.0.0",
    "process": "^0.11.10",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.1.2",
    "typescript": "^4.2.4",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2",
    "worker-loader": "^3.0.8"
  },
  "dependencies": {
    "node-addon-api": "^3.1.0"
  }
}
